" remap esc key
:imap jj <Esc>
" solarized colorscheme (https://github.com/altercation/vim-colors-solarized)
syntax enable
set background=dark
let g:solarized_termtrans=1
colorscheme solarized

" Set mapleader to space
let mapleader=" "

let g:ctrlp_map = '<Leader>o'
let g:ctrlp_cmd = 'CtrlP'

source ~/.simplenoterc



